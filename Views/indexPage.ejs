      }
    }

    .sparkle-wrapper {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      pointer-events: none;
    }

    .sparkle {
      position: absolute;
      width: 6px;
      height: 6px;
      border-radius: 50%;
      background-color: red;
      animation: float-sparkle 1s ease-in infinite;
      opacity: 0;
    }

    .sparkle::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      transform: rotate(45deg);
      background-color: rgba(255, 255, 255, 0.8);
    }

    @keyframes float-sparkle {
      0% {
        transform: translate(0, 0) rotate(0deg) scale(0);
        opacity: 0;
      }

      50% {
        opacity: 1;
      }

      100% {
        transform: translate(var(--tx), var(--ty)) rotate(180deg) scale(1);
        opacity: 0;
      }
    }

    /* Optional: Add shimmer effect to cards */
    .category-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 50%;
      height: 100%;
      background: linear-gradient(120deg,
          transparent,
          rgba(255, 255, 255, 0.3),
          transparent);
      pointer-events: none;
      transition: 0.5s;
      z-index: 1;
    }

    .category-card:hover::before {
      left: 100%;
    }
  </style>
</head>

